# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.login()
GET        /start               controllers.Application.start()
GET        /help               controllers.Application.help()
GET        /oberkoerper         controllers.Application.oberkoerper()
GET        /studios             controllers.Application.studios()
GET        /knstudio           controllers.Application.knStudio()
GET        /arme               controllers.Application.arme()
GET        /beine               controllers.Application.beine()
GET        /bauch               controllers.Application.bauch()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
